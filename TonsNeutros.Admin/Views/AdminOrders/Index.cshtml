@model ReflectionIT.Mvc.Paging.PagingList<Order>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mt-3">Compras</h2>

<form method="get" class="form-inline mt-3">
    <input name="filter" class="form-control text-light" placeholder="filter"
           value="@Model.RouteValue["Filter"]" />

    <button type="submit" class="btn btn-secondary mt-1">Procurar</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-outline-dark mt-3">Adicionar produto</a>
</p>

@if (!Model.Any())
{
    <h2 class="text-center">Não existem categorias para apresentar</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderSentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Buyer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderSentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.AddressId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
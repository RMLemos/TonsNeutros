@model TonsNeutros.Admin.Models.Supplier

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mt-4">Apagar fornecedor</h2>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplerProducts)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplerProducts)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nipc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nipc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComercialName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComercialName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <h5>Tem a certeza que pretende apagar o fornecedor?</h5>
    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Delete" class="btn btn-info" />
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
    </form>
</div>

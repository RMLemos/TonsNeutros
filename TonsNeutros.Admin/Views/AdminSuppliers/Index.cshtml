@model IEnumerable<TonsNeutros.Admin.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mt-3">Fornecedores</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-dark mt-3">Create New</a>
</p>

@if(!Model.Any())
{
    <h2 class="text-center">Não existem fornecedores para apresentar</h2>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr class="table-light">
                <th scope="row">
                    @Html.DisplayNameFor(model => model.SupplierName)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.ComercialName)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="row"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComercialName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SupplierId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.SupplierId">Fornecedor</a> |
                        <a asp-action="Delete" asp-route-id="@item.SupplierId">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


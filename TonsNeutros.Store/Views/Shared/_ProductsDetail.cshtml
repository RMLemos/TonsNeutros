@model Product

<div class="product product-list-item">
    <div class="product-cover">
        <a asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId"><img src="@Url.Content(Model.ImageURL)" alt="Image of the product" /></a>
    </div>
    <div class="product-name-container">
        <a class="product-link" asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId">
            @Model.ProductName
        </a>
    </div>

    <div class="product-price">
        <span class="product-price-item">
            @Model.Price.ToString("c")
        </span>
    </div>
</div>


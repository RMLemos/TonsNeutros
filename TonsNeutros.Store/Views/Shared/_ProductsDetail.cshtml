@model Product

<div class="book book-list-item">
    <div class="book-cover">
        <a asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId"><img src="@Model.ImageURL" alt="Image of the cover of the book" /></a>
    </div>
    <div class="book-title-container">
        <a class="book-link" asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId">
            @Model.ProductName
        </a>
    </div>

    <div class="book-author">
        <span class="book-author-item">
            @Model.Price.ToString("c")
        </span>
    </div>
</div>

